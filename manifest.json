{
  "display_information": {
    "name": "Airdancer",
    "description": "Control physical switches via Slack for remote notifications"
  },
  "features": {
    "app_home": {
      "home_tab_enabled": false,
      "messages_tab_enabled": true,
      "messages_tab_read_only_enabled": false
    },
    "bot_user": {
      "display_name": "Airdancer",
      "always_online": false
    },
    "slash_commands": [
      {
        "command": "/dancer",
        "description": "Control Airdancer switches and manage users/groups",
        "usage_hint": "[help|register|bother|users|groups|switch|user|group] [args...]",
        "should_escape": false
      },
      {
        "command": "/bother",
        "description": "Activate someone's switch for a specified duration",
        "usage_hint": "[--duration <seconds>] <user_or_group>",
        "should_escape": false
      }
    ]
  },
  "oauth_config": {
    "scopes": {
      "bot": ["channels:history", "chat:write", "im:history", "im:read", "commands", "users:read", "app_mentions:read"]
    }
  },
  "settings": {
    "event_subscriptions": {
      "bot_events": ["message.channels", "message.im", "app_mention"]
    },
    "interactivity": {
      "is_enabled": true
    },
    "org_deploy_enabled": true,
    "socket_mode_enabled": true,
    "token_rotation_enabled": false
  }
}
